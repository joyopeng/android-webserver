<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/paybutton_select" android:state_selected="true"/>
    <!-- 获得焦点时的图片背景 -->
    <item android:drawable="@drawable/paybutton_select" android:state_focused="true"/>
    <item android:drawable="@drawable/paybutton_hove" android:state_hovered="true"/>
    <!-- 默认时的背景图片 -->
    <item android:drawable="@drawable/paybutton_normal"/>

</selector>